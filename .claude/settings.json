{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/ruff_format_hook.sh \"$(jq -r '.tool_input.file_path')\" modify"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(cd:*)",
      "Bash(.claude/ruff_format_hook.sh:*)",
      "Bash(ls:*)",
      "Bash(pytest:*)",
      "Bash(make:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(mkdir:*)",
      "Bash(PYTHONPATH=src:tests uv run:*)",
      "Bash(PYTHONPATH=src python:*)",
      "Bash(sed:*)",
      "Bash(grep:*)",
      "Bash(python test:*)",
      "Bash(find:*)",
      "Bash(python:*)",
      "Bash(cat:*)",
      "mcp__fetch__fetch",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "Bash(chmod:*)",
      "Bash(bash:*)"
    ],
    "deny": []
  }
}